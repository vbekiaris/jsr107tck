<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.sun.tdk</groupId>
    <artifactId>sigtest-plugin</artifactId>
    <packaging>maven-plugin</packaging>

    <name>The Signature Test tool plugin for Maven2</name>
    <version>3.1</version>
    <description>The Signature Test tool makes it easy to compare the signatures of two different implementations or different versions of the same API.</description>
    <url>https://sigtest.dev.java.net/</url>

    <dependencies>

        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-plugin-api</artifactId>
            <version>2.0</version>
        </dependency>

        <dependency>
            <groupId>com.sun.tdk</groupId>
            <artifactId>sigtest</artifactId>
            <version>3.1</version>
        </dependency>

    </dependencies>

    <build>
        <sourceDirectory>${build.mvnsrc.dir}/sigtest</sourceDirectory>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <includes>
                            <include>main/java/com/sun/tdk/signaturetest/mvn/**</include>
                        </includes>
                    </configuration>
                </plugin>
            </plugins>

        </pluginManagement>
    </build>

</project>


